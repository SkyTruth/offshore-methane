    "lat, lon = 31.6585, 5.9053\n",
    "start = dt.date(2019, 10, 10)\n",
    "end = dt.date(2019, 10, 15)\n",
    "\n",
    "pt = ee.Geometry.Point(lon, lat)\n",
    "coll = (\n",
    "    ee.ImageCollection(\"COPERNICUS/S2_HARMONIZED\")\n",
